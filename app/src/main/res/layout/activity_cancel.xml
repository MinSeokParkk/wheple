<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


<ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="800dp">
            <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp" app:srcCompat="@drawable/icon_back"
                    android:id="@+id/img_cancel_back"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/guideline10"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#CACACA"

                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:id="@+id/vie1w"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/text1View17"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintGuide_begin="46dp"
                    android:id="@+id/guideline10"/>

            <TextView
                    android:text="취소하기"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tex2tView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/guideline10"/>
            <TextView
                    android:text="취소 예정 내역"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1View3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline10" android:layout_marginTop="24dp"/>
            <TextView
                    android:text="총 환불금액"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1View4"
                    app:layout_constraintTop_toBottomOf="@+id/text1View3" android:layout_marginTop="29dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"/>
            <TextView
                    android:text="29,800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_refund"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/text1View3" android:layout_marginTop="24dp"/>
            <TextView
                    android:text="반환 쿠폰"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/te1xtView6" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text1View4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
            <TextView
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_recoupon"
                    app:layout_constraintTop_toBottomOf="@+id/text1View4" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>
            <TextView
                    android:text="환불 포인트"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/te1xtView8"
                    app:layout_constraintTop_toBottomOf="@+id/te1xtView6" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="24dp"/>
            <TextView
                    android:text="300"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_repoint" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_cancel_recoupon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#CACACA"

                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/vie1w13"
                    app:layout_constraintTop_toBottomOf="@+id/te1xtView8" android:layout_marginTop="24dp"/>
            <TextView
                    android:text="결제내역"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/te1xtView10" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/vie1w13"/>
            <TextView
                    android:text="예약 금액"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tex1tView11" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/te1xtView10" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
            <TextView
                    android:text="30,000"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_price"
                    app:layout_constraintTop_toBottomOf="@+id/te1xtView10" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>
            <TextView
                    android:text="쿠폰 사용"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tex1tView13" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tex1tView11"/>
            <TextView
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_coupon" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_cancel_price"/>
            <TextView
                    android:text="포인트 사용"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1View15" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tex1tView13"/>
            <TextView
                    android:text="300"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_point" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_cancel_coupon"/>
            <TextView
                    android:text="총 결제금액"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1View17" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="29dp"
                    app:layout_constraintTop_toBottomOf="@+id/text1View15"/>
            <TextView
                    android:text="29,700"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cancel_payment" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_cancel_point"/>

            <TableLayout

                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*" app:layout_constraintTop_toBottomOf="@+id/vie1w"
                    android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tableLayout">

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgrey"
                        android:stretchColumns="*"
                        android:padding="0dp">
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"


                            android:padding="10dp"
                            android:text="취소기준"
                            android:textColor="@color/white"
                            android:background="#777777"
                            android:textSize="12sp"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="1dp"
                            android:padding="10dp"
                            android:text="취소 수수료"
                            android:background="#777777"
                            android:textSize="12sp"
                            android:gravity="center"
                    />

                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:paddingTop="0dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                >
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="이용 7일 전까지"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="없음"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />


                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:paddingTop="0dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                >
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="이용 3일 전까지"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="50%"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />

                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:paddingTop="0dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                >
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="이용 1일 전까지"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="80%"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />

                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:paddingTop="0dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="1dp"
                        android:paddingBottom="1dp"
                >
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="이용 당일"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="1dp"
                            android:padding="10dp"
                            android:text="환불 불가"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center"
                    />

                </TableRow>

            </TableLayout>
            <TextView
                    android:text="@string/cancel_option"
                    android:layout_width="330dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1View19"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>
            <CheckBox
                    android:text="위 내용을 모두 확인하였습니다."
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_cancel" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text1View19" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
            <Button
                    android:text="예약 취소하기"
                    android:background="@drawable/button_off"
                    android:textColor="@color/white"
                    android:layout_width="330dp"
                    android:layout_height="55dp"
                    android:id="@+id/button_cancel" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/check_cancel" android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>