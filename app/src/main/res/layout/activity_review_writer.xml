            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView91"
            app:layout_constraintTop_toBottomOf="@+id/view4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="16dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_rev_writer" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            android:progressTint="@color/ratingYellow"
            android:secondaryProgressTint="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/textView91"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:textSize="14dp"
            android:id="@+id/edit_rev_writer"
            android:background="@drawable/edittext_background"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintTop_toBottomOf="@+id/view16"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:hint="이 곳에 대한 리뷰를 작성해주세요.\n(5자 이상 작성해주세요.)"/>
    <Button
            android:text="등록하기"
            android:textColor="@color/white"
            android:background="@drawable/button_off"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:id="@+id/button_rev_writer_sending" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
