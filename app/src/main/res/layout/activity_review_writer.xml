<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <View
            android:layout_width="390dp"
            android:layout_height="0.5dp"
            android:background="#B8B8B8"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintTop_toBottomOf="@+id/rating_rev_writer" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp" app:srcCompat="@drawable/icon_back"
            android:id="@+id/img_rev_writer_back"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline17"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="46dp"
            android:id="@+id/guideline17"/>
    <TextView
            android:text="리뷰 작성 하기"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_rev_writer_subject"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline17"/>
    <TextView
            android:text="장소 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView69" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline17"/>
    <TextView
            android:text="이용 일시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView70" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView69" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="장소 이름"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_rev_wrtier_name" android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline17"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="2019-10-09  13:00 ~ 14:00"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_rev_writer_daytime" android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_rev_wrtier_name"/>
    <View
            android:layout_width="390dp"
            android:layout_height="0.5dp"
            android:background="#B8B8B8"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintTop_toBottomOf="@+id/textView70" android:layout_marginTop="16dp"/>
    <TextView
            android:text="이 곳의 별점을 선택해주세요."
