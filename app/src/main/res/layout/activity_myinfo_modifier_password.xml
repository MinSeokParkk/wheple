<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="46dp" android:id="@+id/guideline21"/>
    <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp" app:srcCompat="@drawable/icon_back"
            android:id="@+id/img_myinfoM_pw_back" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline21" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="비밀번호 수정"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView146" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline21"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_myinfoM_pw_oldpw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/text_myinfoM_pw_explain"
            android:visibility="visible" android:hint="비밀번호를 입력해주세요."/>
    <TextView
            android:text="회원님의 소중한 정보 보호를 위해 현재 비밀번호를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_myinfoM_pw_explain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/guideline21"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp"/>
    <Button
            android:text="확인"
            android:background="@drawable/button_on"
            android:textColor="@color/white"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:id="@+id/button_myinfoM_pw_oldpw"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:visibility="gone"/>
    <TextView
            android:text="\uf06e"
            android:textSize="16dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="20dp"
            android:id="@+id/text_myinfoM_pw_oldpw_showing"
            app:layout_constraintTop_toTopOf="@+id/edit_myinfoM_pw_oldpw"
            app:layout_constraintBottom_toBottomOf="@+id/edit_myinfoM_pw_oldpw"
            app:layout_constraintEnd_toEndOf="@+id/edit_myinfoM_pw_oldpw" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:visibility="gone"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="8~16자리 영문, 숫자, 특수문자 조합"
            android:maxLength="16"
            android:id="@+id/edit_myinfoM_pw_newpw" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_myinfoM_pw_explain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:maxLength="16"
            android:ems="10"
            android:hint="새로운 비밀번호 확인"
            android:id="@+id/edit_myinfoM_pw_newcheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/text_myinfoM_pw_newpw_alarm"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="\uf06e"
            android:textSize="16dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="20dp"
            android:id="@+id/text_myinfoM_pw_newpw_showing"
            app:layout_constraintTop_toTopOf="@+id/edit_myinfoM_pw_newpw"
            app:layout_constraintBottom_toBottomOf="@+id/edit_myinfoM_pw_newpw"
            app:layout_constraintEnd_toEndOf="@+id/edit_myinfoM_pw_newpw" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:visibility="gone"/>
    <TextView
            android:text="\uf06e"
            android:textSize="16dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="20dp"
            android:id="@+id/text_myinfoM_pw_newcheck_showing"
            app:layout_constraintTop_toTopOf="@+id/edit_myinfoM_pw_newcheck"
            app:layout_constraintBottom_toBottomOf="@+id/edit_myinfoM_pw_newcheck"
            app:layout_constraintEnd_toEndOf="@+id/edit_myinfoM_pw_newcheck" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:visibility="gone"/>
    <Button
            android:text="비밀번호 저장"
            android:background="@drawable/button_on"
            android:textColor="@color/white"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:id="@+id/button_myinfoM_pw_newpw" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:visibility="gone"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_myinfoM_pw_oldpw_alarm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_myinfoM_pw_oldpw"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_myinfoM_pw_newpw_alarm"
            app:layout_constraintTop_toBottomOf="@+id/edit_myinfoM_pw_newpw"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_myinfoM_pw_newcheck_alarm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_myinfoM_pw_newcheck"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>
</android.support.constraint.ConstraintLayout>