<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/white"
                                             android:layout_marginTop="10dp"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="장소 이름"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_myres_name"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/text_item_myres_state"
            android:layout_marginStart="18dp" android:layout_marginLeft="32dp"/>
    <TextView
            android:text="예약날짜"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_myres_name"/>
    <TextView
            android:text="예약시간"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView62" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="2019-10-30"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_myres_date" app:layout_constraintStart_toEndOf="@+id/textView28"
            android:layout_marginLeft="36dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_myres_name" android:layout_marginTop="22.5dp"/>
    <TextView
            android:text="12:00 ~ 14:00"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_myres_time" app:layout_constraintStart_toEndOf="@+id/textView62"
            android:layout_marginLeft="36dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" android:layout_marginTop="13.5dp"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="이용전"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_myres_state"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"/>
    <Button
            android:text="리뷰 작성"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:background="@drawable/button_on"
            android:textColor="@color/white"
            android:id="@+id/button_item_myres_review" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_myres_time" app:layout_constraintHorizontal_bias="0.48"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:text="\uf1f8"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:fontFamily="@font/fontawesome_webfont"
            android:id="@+id/text_item_myres_delete" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>