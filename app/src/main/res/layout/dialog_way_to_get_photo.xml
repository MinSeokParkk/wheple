<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="300dp"
                                             android:layout_height="wrap_content">

    <Button
            android:text="카메라"
            android:layout_width="253dp"
            android:layout_height="42dp"
            android:id="@+id/button_camera" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="앨범"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:id="@+id/button_album" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/button_camera"/>
    <Button
            android:text="기본이미지"
            android:layout_width="253dp"
            android:layout_height="48dp"
            android:id="@+id/button_basicphoto" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/button_album"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>