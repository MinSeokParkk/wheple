<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp" app:srcCompat="@drawable/icon_back"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline8"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="46dp" android:id="@+id/guideline8"/>
    <TextView
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView63" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"/>
    <TextView
            android:text="이메일"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView64" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline8"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:privateImeOptions="defaultInputmode=english"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signup_email_editText"
            android:hint="이메일을 입력해주세요" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView64" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="비밀번호"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView65" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="43dp" android:layout_marginStart="43dp"/>
    <EditText

            android:layout_width="330dp"
            android:layout_height="50dp"

            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"

            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_password_editText"
            android:hint="8~16자리 영문, 숫자, 특수문자 조합" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView65" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="비밀번호 확인"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView66" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_password_editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="43dp" android:layout_marginStart="43dp"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_repassword_editText"
            android:hint="8~16자리 영문, 숫자, 특수문자 조합" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView66"/>
    <TextView
            android:text="닉네임"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView67" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_repassword_editText"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:privateImeOptions="defaultInputmode=korean"
            android:singleLine="true"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="14dp"
            android:ems="10"
            android:id="@+id/signup_nickname_editText"
            android:hint="2~8자리 한글" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView67"/>
    <CheckBox



            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_agree_checkBox" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
    <Button
            android:text="회원가입"
            android:background="@drawable/button_off"
            android:textColor="@color/white"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:id="@+id/signup_finish_Button" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.492" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="웨플의"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/signup_agree_checkBox"
            android:layout_marginTop="34.5dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
    <TextView
            android:text=" 이용약관"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginTop="34.5dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
    <TextView
            android:text=" 및 "
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginTop="34.5dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
    <TextView
            android:text="개인정보취급방침"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginTop="34.5dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
    <TextView
            android:text="에 동의합니다. "
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginTop="34.5dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_nickname_editText"/>
</androidx.constraintlayout.widget.ConstraintLayout>