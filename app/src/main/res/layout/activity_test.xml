<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/testName_editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="이름"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/testAge_editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/testName_editText" android:hint="나이"/>
    <Button
            android:text="저장"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testSave_button" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/testAge_editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"
            android:onClick="checkLogin"/>
</android.support.constraint.ConstraintLayout>